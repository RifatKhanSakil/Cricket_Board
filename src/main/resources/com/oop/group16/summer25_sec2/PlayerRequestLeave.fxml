<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop.group16.summer25_sec2.PlayerRequestLeaveController">
    <children>
        <!-- Title -->
        <Label layoutX="40.0" layoutY="20.0" text="Request Leave">
            <font>
                <Font size="20.0" />
            </font>
        </Label>

        <!-- Leave Type -->
        <Label layoutX="40.0" layoutY="70.0" text="Leave Type:" />
        <TextField fx:id="leaveTypeField" layoutX="150.0" layoutY="65.0" />

        <!-- Reason -->
        <Label layoutX="40.0" layoutY="110.0" text="Reason:" />
        <TextField fx:id="reasonField" layoutX="150.0" layoutY="105.0" prefWidth="350.0" />

        <!-- Start Date -->
        <Label layoutX="40.0" layoutY="150.0" text="Start Date:" />
        <DatePicker fx:id="startDatePicker" layoutX="150.0" layoutY="145.0" />

        <!-- End Date -->
        <Label layoutX="40.0" layoutY="190.0" text="End Date:" />
        <DatePicker fx:id="endDatePicker" layoutX="150.0" layoutY="185.0" />

        <!-- Submit Request Button -->
        <Button layoutX="40.0" layoutY="240.0" mnemonicParsing="false" onAction="#submitRequestOnAction" text="Submit Request" />

        <!-- Return Button -->
        <Button layoutX="485.0" layoutY="350.0" mnemonicParsing="false" onAction="#returnOnAction" text="Return" />

    </children>
</AnchorPane>
