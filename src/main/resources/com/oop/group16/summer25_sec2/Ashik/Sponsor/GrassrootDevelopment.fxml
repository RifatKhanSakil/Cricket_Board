<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.oop.group16.summer25_sec2.Ashik.Sponsor.GrassrootDevelopmentController"
            prefHeight="620.0" prefWidth="820.0">
    <fx:define>
        <ToggleGroup fx:id="fundingGroup"/>
    </fx:define>
    <children>
        <VBox spacing="10.0" AnchorPane.topAnchor="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"
              AnchorPane.rightAnchor="10.0">
            <children>
                <Label text="Grassroots Development Sponsorship" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <TextField fx:id="orgNameField" promptText="Sponsor Organization Name"/>
                <ComboBox fx:id="programTypeCombo" promptText="Select Program Type"/>
                <DatePicker fx:id="requestDatePicker" promptText="Sponsorship Request Date"/>
                <HBox spacing="10.0">
                    <children>
                        <RadioButton fx:id="fullFundingRadio" text="Full Funding" toggleGroup="$fundingGroup"/>
                        <RadioButton fx:id="partialFundingRadio" text="Partial Funding" toggleGroup="$fundingGroup"/>
                        <RadioButton fx:id="equipmentRadio" text="Equipment Sponsorship" toggleGroup="$fundingGroup"/>
                    </children>
                </HBox>
                <TextField fx:id="budgetField" promptText="Allocated Budget Amount"/>
                <TextArea fx:id="detailsArea" promptText="Program Details and Objectives" prefRowCount="5"/>
                <HBox spacing="10.0" alignment="CENTER_RIGHT">
                    <children>
                        <Button fx:id="submitButton" text="Submit Sponsorship Request"/>
                    </children>
                </HBox>
                <Label text="Program Monitoring Dashboard" style="-fx-font-weight: bold;"/>
                <TableView fx:id="programTable" prefHeight="240.0">
                    <columns>
                        <TableColumn fx:id="programNameColumn" text="Program Name" prefWidth="240.0"/>
                        <TableColumn fx:id="startDateColumn" text="Start Date" prefWidth="160.0"/>
                        <TableColumn fx:id="statusColumn" text="Status" prefWidth="160.0"/>
                        <TableColumn fx:id="notesColumn" text="Notes" prefWidth="240.0"/>
                    </columns>
                </TableView>
                <HBox spacing="10.0" alignment="CENTER_RIGHT">
                    <children>
                        <Button fx:id="backButton" text="Back to Menu" onAction="#onBackToMenu"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
