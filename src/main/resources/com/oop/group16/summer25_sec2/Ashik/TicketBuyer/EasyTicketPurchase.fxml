<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.oop.group16.summer25_sec2.Ashik.TicketBuyer.EasyTicketPurchaseController"
            prefHeight="400.0" prefWidth="600.0">
    <fx:define>
        <ToggleGroup fx:id="ticketTypeGroup"/>
    </fx:define>
    <children>
        <Label fx:id="titleLabel" text="Ticket Purchase" layoutX="220.0" layoutY="14.0"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <VBox layoutX="20.0" layoutY="50.0" spacing="10.0">
            <children>
                <HBox spacing="20.0" alignment="CENTER_LEFT">
                    <children>
                        <TextField fx:id="matchTextField" prefWidth="260.0" promptText="Enter match or event"/>
                        <TextField fx:id="buyerInputField" prefWidth="280.0"
                                   promptText="Buyer name or number of tickets"/>
                    </children>
                </HBox>
                <HBox spacing="12.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Ticket Type:"/>
                        <RadioButton fx:id="regularRadio" text="Regular" toggleGroup="$ticketTypeGroup"
                                     selected="true"/>
                        <RadioButton fx:id="vipRadio" text="VIP" toggleGroup="$ticketTypeGroup"/>
                        <Label text="Price:"/>
                        <ComboBox fx:id="priceComboBox" promptText="Select price" editable="false" prefWidth="120.0"/>
                        <Label text="Seat Tier:"/>
                        <ComboBox fx:id="seatTierComboBox" promptText="Select tier" prefWidth="120.0"/>
                    </children>
                </HBox>
                <DatePicker fx:id="matchDatePicker" prefWidth="280.0" promptText="Select match date"/>
            </children>
        </VBox>

        <TableView fx:id="seatsTable" layoutX="20.0" layoutY="160.0" prefHeight="200.0" prefWidth="560.0">
            <columns>
                <TableColumn fx:id="nameColumn" text="Name" prefWidth="140.0"/>
                <TableColumn fx:id="sectionColumn" text="Seat Tier" prefWidth="140.0"/>
                <TableColumn fx:id="priceColumn" text="Price" prefWidth="140.0"/>
                <TableColumn fx:id="availabilityColumn" text="Availability" prefWidth="160.0"/>
            </columns>
        </TableView>

        <Button fx:id="backButton" text="Back to Events" layoutX="20.0" layoutY="350.0" onAction="#handleBackToEvents"/>
        <Button fx:id="proceedButton" text="Proceed to Payment" layoutX="440.0" layoutY="350.0"
                onAction="#handleProceedToPayment"/>
    </children>
</AnchorPane>
