<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="user7goal1">
    <children>
        <Label layoutX="350.0" layoutY="20.0" text="Stadium Access Control">
            <font>
                <Font name="System Bold Italic" size="21.0" />
            </font>
        </Label>

        <Label layoutX="30.0" layoutY="60.0" text="Authorized Personnel" />
        <TableView fx:id="personnelTableView" layoutX="30.0" layoutY="80.0" prefHeight="200.0" prefWidth="740.0">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="200.0" text="Name" />
                <TableColumn fx:id="roleColumn" prefWidth="150.0" text="Role" />
                <TableColumn fx:id="accessColumn" prefWidth="150.0" text="Access Level" />
                <TableColumn fx:id="toggleColumn" prefWidth="240.0" text="Permission Status" />
            </columns>
        </TableView>

        <Label layoutX="30.0" layoutY="300.0" text="Access Schedule" />
        <TableView fx:id="scheduleTableView" layoutX="30.0" layoutY="320.0" prefHeight="150.0" prefWidth="400.0">
            <columns>
                <TableColumn fx:id="timeColumn" prefWidth="150.0" text="Time Slot" />
                <TableColumn fx:id="areaColumn" prefWidth="150.0" text="Area" />
                <TableColumn fx:id="personColumn" prefWidth="100.0" text="Person" />
            </columns>
        </TableView>

        <Label layoutX="450.0" layoutY="300.0" text="Restricted Areas" />
        <TableView fx:id="restrictedAreasTableView" layoutX="450.0" layoutY="320.0" prefHeight="150.0" prefWidth="320.0">
            <columns>
                <TableColumn fx:id="areaNameColumn" prefWidth="150.0" text="Area Name" />
                <TableColumn fx:id="accessLevelColumn" prefWidth="170.0" text="Access Level" />
            </columns>
        </TableView>

        <ToggleButton fx:id="staffToggle" layoutX="30.0" layoutY="490.0" mnemonicParsing="false" text="Toggle Staff Access" />
        <ToggleButton fx:id="playersToggle" layoutX="180.0" layoutY="490.0" mnemonicParsing="false" text="Toggle Players Access" />

        <Button fx:id="saveButton" layoutX="330.0" layoutY="490.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="120.0" text="Save Changes" />
        <Button fx:id="backButton" layoutX="650.0" layoutY="490.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="120.0" text="Back to Dashboard" />

        <Line endX="770.0" endY="480.0" startX="30.0" startY="480.0" />
    </children>
</AnchorPane>