<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop.group16.summer25_sec2.PlayerViewMatchScheduleController">
    <children>
        <Label fx:id="titleLabel" layoutX="40.0" layoutY="20.0" text="Match Schedule">
            <font>
                <Font size="20.0" />
            </font>
        </Label>
        <Label layoutX="40.0" layoutY="60.0" text="Date Range:" />
        <TextField fx:id="dateRangeField" layoutX="140.0" layoutY="56.0" />
        <Button layoutX="40.0" layoutY="95.0" mnemonicParsing="false" onAction="#loadScheduleOnAction" text="Load Schedule" />
        <TableView fx:id="matchTable" layoutX="40.0" layoutY="140.0" prefHeight="200.0" prefWidth="520.0">
            <columns>
                <TableColumn fx:id="matchDateColumn" prefWidth="120.0" text="Date" />
                <TableColumn fx:id="opponentColumn" prefWidth="150.0" text="Opponent" />
                <TableColumn fx:id="venueColumn" prefWidth="150.0" text="Venue" />
                <TableColumn fx:id="matchTypeColumn" prefWidth="100.0" text="Match Type" />
            </columns>
        </TableView>
        <Button layoutX="485.0" layoutY="350.0" mnemonicParsing="false" onAction="#returnOnAction" text="Return" />
    </children>
</AnchorPane>
