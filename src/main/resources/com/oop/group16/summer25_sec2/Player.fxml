<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop.group16.summer25_sec2.Player">
   <children>
      <!-- Title -->
      <Label layoutX="40.0" layoutY="20.0" text="Player Dashboard">
         <font>
            <Font size="24.0" />
         </font>
      </Label>

      <!-- Buttons -->
      <Button fx:id="viewPerformanceButton" layoutX="40.0" layoutY="80.0" onAction="#viewPerformanceOnAction" text="View Performance" />
      <Button fx:id="viewMatchScheduleButton" layoutX="40.0" layoutY="130.0" onAction="#viewMatchScheduleOnAction" text="View Match Schedule" />
      <Button fx:id="submitAvailabilityButton" layoutX="40.0" layoutY="180.0" onAction="#submitAvailabilityOnAction" text="Submit Availability" />
      <Button fx:id="messageCoachButton" layoutX="40.0" layoutY="230.0" onAction="#messageCoachOnAction" text="Message Coach" />
      <Button fx:id="downloadReportButton" layoutX="40.0" layoutY="280.0" onAction="#downloadReportOnAction" text="Download Fitness Report" />
      <Button fx:id="logOutButton" layoutX="496.0" layoutY="340.0" onAction="#logOutOnAction" text="Log Out" />
      <Button fx:id="updateFitnessInformationButton" layoutX="248.0" layoutY="80.0" mnemonicParsing="false" onAction="#updateFitnessInformationOnAction" text="Update Fitness Information" />
      <Button fx:id="teamRankingButton" layoutX="248.0" layoutY="130.0" mnemonicParsing="false" onAction="#teamRankingOnAction" text="Team Ranking" />
      <Button fx:id="leaveRequestButton" layoutX="248.0" layoutY="180.0" mnemonicParsing="false" onAction="#leaveRequestOnAction" text="Leave Request" />
   </children>
</AnchorPane>
