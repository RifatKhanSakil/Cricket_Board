<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop.group16.summer25_sec2.PlayerDownloadFitnessReportController">
    <children>
        <Label layoutX="40.0" layoutY="20.0" text="Fitness Reports">
            <font>
                <Font size="20.0" />
            </font>
        </Label>

        <TableView fx:id="fitnessReportTable" layoutX="40.0" layoutY="60.0" prefHeight="250.0" prefWidth="520.0">
            <columns>
                <TableColumn fx:id="dateColumn" prefWidth="120.0" text="Date" />
                <TableColumn fx:id="bmiColumn" prefWidth="100.0" text="BMI" />
                <TableColumn fx:id="heartRateColumn" prefWidth="120.0" text="Heart Rate" />
                <TableColumn fx:id="staminaColumn" prefWidth="180.0" text="Stamina Level" />
            </columns>
        </TableView>

        <Button layoutX="40.0" layoutY="320.0" mnemonicParsing="false" onAction="#downloadReportOnAction" text="Download Report" />

        <Button layoutX="485.0" layoutY="350.0" mnemonicParsing="false" onAction="#returnOnAction" text="Return" />

    </children>
</AnchorPane>
