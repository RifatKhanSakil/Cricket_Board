<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop.group16.summer25_sec2.PlayerTeamRankingsViewController">
    <children>
        <!-- Title -->
        <Label layoutX="280.0" layoutY="20.0" text="Team Player Rankings" />

        <!-- Filters -->
        <Label layoutX="20.0" layoutY="60.0" text="Format:" />
        <ComboBox fx:id="formatComboBox" layoutX="80.0" layoutY="55.0" prefWidth="120.0" />

        <Label layoutX="220.0" layoutY="60.0" text="Date:" />
        <DatePicker fx:id="datePicker" layoutX="270.0" layoutY="55.0" prefWidth="150.0" />

        <Label layoutX="450.0" layoutY="60.0" text="Board:" />
        <ComboBox fx:id="boardComboBox" layoutX="520.0" layoutY="55.0" prefWidth="120.0" />

        <!-- Load Rankings Button -->
        <Button fx:id="loadButton" layoutX="20.0" layoutY="100.0" onAction="#handleLoadRankings" text="Load Rankings" />

        <!-- Rankings Table -->
        <TableView fx:id="rankingsTable" layoutX="20.0" layoutY="140.0" prefHeight="300.0" prefWidth="700.0">
            <columns>
                <TableColumn fx:id="teamColumn" prefWidth="150.0" text="Team" />
                <TableColumn fx:id="formatColumn" prefWidth="100.0" text="Format" />
                <TableColumn fx:id="rankColumn" prefWidth="50.0" text="Rank" />
                <TableColumn fx:id="playerColumn" prefWidth="200.0" text="Top Player" />
                <TableColumn fx:id="pointsColumn" prefWidth="100.0" text="Points" />
            </columns>
        </TableView>

        <!-- Action Buttons -->
        <Button fx:id="exportButton" layoutX="20.0" layoutY="450.0" onAction="#handleExportRankings" text="Export Rankings" />
        <Button fx:id="returnButton" layoutX="150.0" layoutY="450.0" onAction="#ReturnOnAction" text="Return " />

    </children>
</AnchorPane>
